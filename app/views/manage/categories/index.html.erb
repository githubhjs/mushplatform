<div class="right2">
  <div class="dbt">
    <p><a href="/manage/blogs"><img src="//images/new/new/documents_32.png" align="absmiddle"></a>日志</p>
    <%= render :partial => "/manage/blogs/search" %>
  </div>
  <%= render :partial => "/manage/blogs/blog_menu" %>
  <div class="height20"></div>
  <div class="w90_bd">
    增加新类别名称：
    <% remote_form_for :category, @category, :url => "/manage/categories" do |f| %>      
        <%=   f.text_field :name %>
        <%=   f.submit("增加",:class => "sbumit")%>
        <span  id="notice_text"></span>
        <span  id='onload_img' style='display:none;'><img src='/images/spinner.gif' /></span>     
    <%end%>
  </div>  
  <div class="w90">
    <table class="lanhui" width="100%" bgcolor="#cecccf" border="0" cellpadding="0" cellspacing="1" id = "category_table">
      <tr bgcolor="#f3f3f3">
        <td class="tit" width="283">名称</td>
        <td class="tit" width="87">文章数量</td>
        <td class="tit" width="110">管理</td>
      </tr>
      <%for category in @categories do %>
        <%= render :partial => "/manage/categories/success_tr" ,:locals => {:category => category} %>
      <%end%>
    </table>
  </div>
</div>
