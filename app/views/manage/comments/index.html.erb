<div class="right2">
  <div class="dbt">
    <p><a href="/manage/blogs"><img src="/images/new/documents_32.png" align="absmiddle"></a>日志</p>
    <%= render :partial => "/manage/blogs/search" %>
  </div>
  <%= render :partial => "/manage/blogs/blog_menu" %>
  <div class="w90">    
    <div class="height20"></div>
    <div class="w90">
      <div class="height20"></div>
      <%for comment in @comments do %>
        <div class="blog">
          <dl>
            <dt><%= h comment.title %></dt>
            <p>
             <%= comment.body %>
           </p>             
            <dd>评论人：<%= comment.author %>|评论时间：<strong><%=timelong(comment.created_at) %></strong>|
            <%= link_to image_tag("/images/btn_delete.png", :alt => '删除'), {:controller => 'manage/comments', :action => 'destroy', :id => comment.id, :page => params[:page]}, :method => 'delete',:title => "删除" %>
            </dd>
          </dl>          
        </div>
        <div class="height20"></div>
      <%end%>
    </div>
    <div class="height20"></div>
    <div class="jogger">
      <%= will_paginate @blogs, {:prev_label => '上一页', :next_label => '下一页'} %>
    </div>
  </div>
</div>
