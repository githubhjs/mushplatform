<!--person_menu-->

  <div class="manage_m L">
    <h2>回复管理</h2>
    <table cellpadding="0" cellspacing="0" id = "comment_table">
      <tr>
        <td class="tit" width="160">回复</td>
        <td class="tit" width="160">日志</td>
        <td class="tit" width="80">回复人</td>
        <td class="tit" width="80">回复时间</td>
        <td class="tit" width="50">管理</td>
      </tr>
      <%for comment in @comments do %>
        <tr>
          <td class="m_border"><a href="#"><%= comment.realtitle %></a>&nbsp;</td>
          <td class="m_border"><a href="#"><%= comment.blog.title if comment.blog %></a>&nbsp;</td>
          <td class="m_border"><%= comment.author %>&nbsp;</td>
          <td class="m_border"><%= timelong(comment.created_at) %>&nbsp;</td>
          <td class="m_border">&nbsp;</td>
        </tr>
      <%end%>
    </table>
  </div>
