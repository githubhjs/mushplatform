<div class="right2">
  <%= render :partial => "/manage/friends/friends_menu" %>
  <div class="w90">
    <div class="height20"></div>
    <div class="friend">
      <ul>
        <% for user in @friends -%>
          <li>
            <p><a href="<%= user.space_url %>" target="_blank"><img src="<%= user_icon(user.id) %>"/></a></p>
            <p style="overflow: hidden; width: 78px; height: 22px;"><a href="<%= user.space_url %>" target="_blank"><%= user.real_name %> </a></p>
            <span><%= link_to('删除好友',{:action => 'destroy', :id => user.id}, :method => 'delete',:confirm => "确定要删除吗?", :class => 'grey') %></span>
          </li>
        <%end%>
      </ul>
    </div>
    <div class="height20"></div>
    <div class="jogger">
     <%= will_paginate @friends, {:prev_label => '上一页', :next_label => '下一页'} %>
   </div>
  </div>
</div>