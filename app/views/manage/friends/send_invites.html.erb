<div class="right2">
  <%= render :partial => "/manage/friends/friends_menu" %>
  <div class="w90">
    <div class="height20"></div>
    <div class="friend">
      <ul>
        <% for invite in @invites -%>
          <%user = invite.user%>
          <li>
            <p><a href="<%= user.space_url %>" target="_blank"><img src="<%= user_icon(user.id) %>"/></a></p>
            <p style="overflow: hidden; width: 78px; height: 22px;"><a href="<%= user.space_url %>" target="_blank"><%= user.real_name %> </a></p>
            <span>
              <% unless invite.accept? %>
                <%= link_to('取消邀请',{:action => 'cancle_invite', :id => invite.invitor_id,:user_id => user.id},:confirm => "确认要取消邀请?", :class => 'grey') %>
              <%else%>
                <front>邀请已被接受</front>
              <%end%>
            </span>
          </li>
        <%end%>
      </ul>
    </div>
    <div class="height20"></div>
    <div class="jogger">

    </div>
  </div>
</div>