<div class="blog_write_center">
  <%form_for :gift,:url => "/manage/gifts/send_to" do |f|  %>
    <div>
      <div>
        <p><b><br />
          赠送给：</b><font style="color:red;"></font>
          <input type="text" id="friend_name" name="friend_name" value=""><img src="/images/xx_xx1.gif" align="absmiddle" onclick="Element.show('friend_list');"></img><br/>
        </p>
      </div>
      <%= render :partial => "/manage/gifts/friend_list" %>
    </div>
    <div>
      <p><b><br />
      选择礼物：</b><font style="color:#999;"></font>      </p>
      <div class="l" style="width: 700px; padding:10px; border:1px solid #ccc" >
        <%for gift in @gifts do %>
          <div class="l" style="width: 110px; height: 50px;">
            <div class="l" style="margin-top: 25px;">
              <input type="radio" value="<%=gift.id%>" name="gift_id"/>
            </div>
            <div id="giftitem_<%=gift.id%>" class="l" style="margin-left: 2px;">
              <img align="absmiddle" title="<%=gift.name_zh%>" alt="巧克力" src="/images/gifts_imgs/<%=gift.icon%>"/>
            </div>
          </div>
        <%end%>
        <div class="clear"></div>
        <div style=" width:100%; height:22px; text-align:right; " ><strong>1</strong> <a href="#">2</a></div>
      </div>
    </div>
    <div class="clear"></div>
    <div>
      <p><b><br />
      附言：</b><font style="color:#999;"></font>      </p>
      <%= f.text_area :post,:class => "text",:cols => "20" ,:rows => "3"  %>
    </div>
    <div style="padding-left: 0px ! important;">
      <input type="checkbox" value="0" name="quiet"/>
      悄悄地送
      <span class="c9"> (不让其他人知道是你送的)</span>
    </div>
    <div style="padding-left: 0px ! important;">
      <input type="checkbox" value="1" name="quiet"/>
      匿名赠送
      <span class="c9"> (不让接收礼物的人知道是你送的)</span>
    </div><br />
    <div>
      <input class="submit"  type="submit" value="　发 布　" />
      <br />
      <br />
    </div>
  <%end%>
</div>