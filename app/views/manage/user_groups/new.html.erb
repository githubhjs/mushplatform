<div class="right2">
  <%= render :partial => "/manage/user_groups/group_menu" %>
  <div class="height20"></div>
  <div class="height20"></div>
  <div class="w90">
    <% form_for :group,:url => "/manage/user_groups", :html => {:multipart => true} do |f| %>
      <table class="qun_add" style="width:780px;">
        <tbody>
          <tr>
            <td>群名称：</td>
            <td>
              <input name="user_group[title]" size="50" maxlength="50" type="text" value="<%= @user_group.title %>">
            </td>
          </tr>
          <tr>
            <td>群类别：</td>
            <td>
              <input name="user_group[category]" size="50" maxlength="50" type="text" value="<%= @user_group.category %>">
            </td>
          </tr>
          <tr>
            <td>群公告：</td>
            <td><textarea name="user_group[description]" cols="50" rows="5"><%= @user_group.description %></textarea><br>公告字数不得超过200个字。</td>
          </tr>
          <tr>
            <td>群图标：</td>
            <td>
              <input type="file" name="user_group[uploaded_data]">
            </td>
          </tr>
          <tr>
            <td></td>
            <td><input style="margin-top: 5px; height: 22px; width: 70px; font-size: 12px;" name="" value="创 建" type="submit"></td>
          </tr>
        </tbody>
      </table>
    <%end%>
    <div class="height20"></div>
  </div>
</div>