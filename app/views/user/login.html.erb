<div class="L signup">
  <h2>请登录</h2>
  <%form_tag("/user/login") do %>
    <div>
      <table>
        <tr>
          <td colspan="2" class="tit_bg"><div class="ico">会员登录</div><span style="color:#800000;"><%= flash[:warning] %></span></td>
        </tr>
        <% fields_for :user, @user do |u_field| %>
          <tr>
            <td align="right">用户名：</td>
            <td>
              <%= u_field.text_field(:user_name, :class => "InpTxt" )%>
              <%= hidden_field_tag 'admin', params[:admin] %>
              <%= hidden_field_tag 'forward', params[:forward] %>

            </td>
          </tr>
          <tr>
            <td align="right">登陆密码：</td>
            <td>
            <%= u_field.password_field(:password, :class => "InpTxt")%></td>
          </tr>
        <tr>
          <td colspan="2" align="left">
            <div style="text-align:left;padding-left:320px;">
              <input name="vip" type="submit" value="登录" />
              <a style="margin-left:5px;" href="/user/signup">注册</a><a style="margin-left:5px;" href="/user/forget_password">忘记密码</a>
            </div>
            
          </td>
        </tr>		
        <%end%>
      </table>
    </div>
  <%end%>
</div>
<script>
  document.getElementById('user_user_name').focus();
</script>