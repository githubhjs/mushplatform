<% form_for(@group,:url => @group.new_record? ? '/admin/groups' : "/admin/groups/#{@group.id}") do |f| %>
  <%= error_messages_for 'group' %>
<% unless @group.new_record? %>
  <ul class="subsubsub">
    <li><a class="current"><%= @group.group_name %></a></li>
  </ul>
  <%end%>
  <table class="form-table">
    <tr class="form-field form-required">
      <th scope="row" valign="top"><label for="template_name">Group Name</label></th>
      <td><%= f.text_field(:group_name) %></td>
    </tr>
    <tr class="form-field">
      <th scope="row" valign="top"><label for="category">Status</label></th>
      <td>
        <select name="group[status]">
          <%= generate_group_status_opetions(@group.status) %>
        </select>
      </td>
    </tr>
    <tr class="form-field">
      <th scope="row" valign="top"><label for="group">Roles</label></th>
      <td>
        <%= generate_roles_checkbox((@group.new_record? ? [] : @group.roles.map(&:id))) %>
      </td>
    </tr>
    <tr class="form-field">
      <th scope="row" valign="top"><label for="body">Descriptiony</label></th>
      <td><%= f.text_area(:description,:cols => 75,:rows => 10)%></td>
    </tr>
  </table>
  <p class="submit">
    <input type="submit" class="button" name="submit" value="Save" />
  </p>

  <div id="ajax-response"></div>

  <div class="tablenav">
    <br class="clear" />
  </div>

  <br class="clear" />
<% end %>
