  <%= error_messages_for :asset %>
  <table class="form-table">
    <tr class="form-field form-required">
      <th scope="row" valign="top"><label for="asset_name">Asset Name</label></th>
      <td><%= text_field 'asset', 'filename' %>
    </tr>
    <tr class="form-field">
      <th scope="row" valign="top"><label for="body">Body</label></th>
      <td><%= text_area_tag 'body', @body, :rows => 20, :cols => 65 %></td>
    </tr>
  </table>

  <p class="submit">
    <%= submit_tag 'Save Asset' %>
    or <%= link_to 'Cancel', assets_path, :class => 'cancel' %>
  </p>