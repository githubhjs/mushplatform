<script>set_current_channel('cms')</script>
<h2>Manage Assets (<%= link_to 'add new', {:action => 'new', :path => @path} %>)</h2>


<% form_tag('/admin/assets/create', :multipart => true ) do %>

  <ul class="subsubsub">
    <li><a class="current">Add New</a></li> |
    <li><a class="current"><%= link_to 'Cancel', {:action => 'index', :path => @path}, :class => 'cancel' %></a></li>
  </ul>

  <table class="form-table">
    <tr class="form-field">
      <th scope="row" valign="top"><label for="file">Path</label></th>
      <td><%= @path %><%= hidden_field_tag 'path', @path  %></td>
    </tr>    
    <tr class="form-field">
      <th scope="row" valign="top"><label for="file">Directory</label></th>
      <td><%= text_field_tag 'dir' %></td>
    </tr>
    <tr class="form-field">
      <th scope="row" valign="top"><label for="file">File</label></th>
      <td><%= file_field_tag 'file' %></td>
    </tr>
  </table>
  
  <p class="submit">
    <%= submit_tag 'Save Asset' %>
    or <%= link_to 'Cancel', {:action => 'index', :path => @path}, :class => 'cancel' %>
  </p>
  
  <div id="ajax-response"></div>

  <div class="tablenav">
      <br class="clear" />
  </div>

  <br class="clear" />
  
<% end -%>
