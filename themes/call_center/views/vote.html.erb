<div class="main">
  <div class="left">
    <%=  render :partial => "/share/myinfo" %>
    <div class="height12"></div>
  </div>
  <div class="right2">
    <div class="box2">
      <div class="title2">
        <p>投票内容</p>
        <span><img src="/images/call_center/tu_tp.gif" align="absmiddle"> <a href="/manage/votes/new"><strong>发起新投票</strong></a></span>
      </div>
      <div class="height20"></div>
      <div class="height20"></div>
      <div class="vote">
        <dl>
          <dt><a href="/votes/<%= @vote.id %>"><%= @vote.title %></a></dt>
          <dd>发起于<strong><%= DateUtil.timelong_for_with_ling(@vote.created_at) %></strong> |投票人数(<%=@vote.member_count %>)|截止日期<strong><%= DateUtil.timelong_for_with_ling(@vote.expire_time) %></strong></dd>
        </dl>
        <div class="height20"></div>
        <div class="list">
          
            <% @vote_options.each do |vote_option| %>
              <% vote_rate = "#{vote_option.vote_rate(@vote.member_count)}%" %>
              <%= vote_option.title %>
               <div class="ProgressBar">
                  <div style="width:<%= vote_rate %>;"><span><%= vote_rate %></span></div>
                  <%= vote_option.vote_count %>人投票
               </div>
            <%end%>        
          <div class="height20"></div>
          <div class="height20"></div>
        </div>
        <%= render :partial => "/share/latest_voter" %>
      </div>
      <div class="height20"></div>
      <div class="height20"></div>
    </div>
  </div>
</div>