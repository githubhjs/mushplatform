<div class="right2">
  <%= render :partial => "/manage/friends/friends_menu" %>
  <div class="w90">
    <div class="height20"></div>
    <div class="friend">
      <ul>
        <% for invite in @invites -%>
          <li>
            <p><a href="<%= invite.space_url %>" target="_blank"><img src="<%= user_icon(invite.invitor_id) %>"/></a></p>
            <p style="overflow: hidden; width: 78px; height: 22px;"><a href="<%= invite.space_url %>" target="_blank"><%= invite.invitor_real_name %> </a></p>
            <span>
              <% unless invite.accept? %>
                <a href="/manage/friends/<%= invite.user_id %>/accept?user_id=<%= invite.invitor_id   %>" class="grey" >接受邀请</a>
               <%else%>
                  <font>已通过</font>
              <%end%>
            </span>
          </li>
        <%end%>
      </ul>
    </div>
    <div class="height20"></div>
    <div class="jogger">
    
    </div>
  </div>
</div>