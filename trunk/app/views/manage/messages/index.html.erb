<div class="right2">
  <%= render :partial => "/manage/messages/message_menu" %>
  <div class="height20"></div>
  <div class="height20"></div>
  <div class="w90">
    <table class="lanhui" width="100%" bgcolor="#cecccf" border="0" cellpadding="0" cellspacing="1">
      <tbody>
        <tr bgcolor="#f3f3f3">
          <td width="6%" align="center"><strong>编号</strong></td>
          <td width="59%" align="center"><strong>标题</strong></td>
          <td width="20%" align="center"><strong>发布时间</strong></td>
          <td width="15%" align="center"><strong>操作</strong></td>
        </tr>
        <% @messages.each_with_index do |message,index| %>
        <tr class="ouout" onmouseover="this.className='onon'" onmouseout="this.className='ouout'" bgcolor="#ffffff">
          <td align="center"><%= index+1 %></td>
          <td align="center"><a href="/manage/messages/<%= message.id %>/edit"><%= h message.title %></a></td>
          <td align="center"><%= timelong(message.created_at) %></td>
          <td align="center">
            <dl>
            <a href="/manage/messages/<%= message .id  %>/edit" title="编辑"><img alt="编辑" src="/images/btn_edit.png"></a>
            <%= link_to_function('<img alt="删除" src="/images/btn_delete.png">', "if (confirm('确定要删除嘛？')) do_delete(this)",:title => '删除',:href => "/manage/messages/#{message.id}/delete") %>
            </dl>
          </td>
        </tr>
        <%end%>
    </tbody></table>
    <div class="height20"></div>
    <div class="jogger">
      <%= will_paginate @messages, {:prev_label => '上一页', :next_label => '下一页'} %>
    </div>
  </div>
</div>