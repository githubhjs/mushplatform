    <form id="posts-filter" action="" method="get">
    <h2>用户组管理 (<%= link_to '新增','/admin/groups/new' %>)</h2>

    <ul class="subsubsub">
      <li><a href='/admin/roles'>角色管理</a> | </li>
      <li><a href='/admin/groups' class="current">用户组管理</a>|</li>
      <li><a href="/admin/users">用户管理</a></li>
     </ul>


    <p id="post-search">
      <input type="text" id="post-search-input" name="s" value="" />
      <input type="submit" value="Search Templates" class="button" />
    </p>

    <div class="tablenav">

    <div class="alignleft">
    <input type="submit" value="Delete" name="deleteit" class="button-secondary delete" />
    <input type="hidden" id="_wpnonce" name="_wpnonce" value="1c529154d8" />
    <input type="hidden" name="_wp_http_referer" value="/wp/wp-admin/edit.php" />
    
    <select name='cat' id='cat' class='postform' >
      <option value='0'>Valid</option>
      <option value="1">Invalid</option>
    </select>
    <input type="submit" id="post-query-submit" value="Filter" class="button-secondary" />
    
    </div>

    <br class="clear" />
    </div>

    <br class="clear" />

    <table class="widefat">
      <thead>
      <tr>

      <th scope="col" class="check-column"><input type="checkbox" onclick="checkAll(document.getElementById('posts-filter'));" /></th>
      <th scope="col">Group Name</th>
      <th scope="col">Status</th>
      <th scope="col">Description</th>

      </tr>
      </thead>
      <tbody>
        <% for group in @groups %>
        <tr id='post-1' class='alternate author-self status-publish' valign="top">
          <th scope="row" class="check-column"><input type="checkbox" name="delete[]" value="1" /></th>
          <td><strong>
            <a class="row-title" href="/admin/groups/<%=group.id%>/edit" ><%= group.group_name %>
              </a></strong>
          </td>
          <td class="num">
            <div class="post-com-count-wrapper">
            <a href='/admin/groups/<%= group.id %>/edit' title='0 pending' class='post-com-count'><span class='comment-count'>
             <%= display_group_status(group) %> 
            </span></a>
            </div>
          </td>
          <td><%= group.description %></td>
        </tr>
        <%  end %>
        
      </tbody>
    </table>

    </form>

