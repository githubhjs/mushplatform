<% form_tag("/admin/users/#{@user.id}/authorize_user",:html => {:method => :post}) do %>
  <%= error_messages_for 'user' %>
<% unless @user.new_record? %>
  <ul class="subsubsub">
    <li><a class="current"><%= @user.user_name %></a></li>
  </ul>
  <%end%>
  <table class="form-table">
    <tr class="form-field form-required">
      <th scope="row" valign="top"><label for="template_name">Account:</label></th>
      <td><%= @user.user_name %></td>
    </tr>
    <tr class="form-field">
      <th scope="row" valign="top"><label for="category">Status:</label></th>
      <td>
        <select name="user[status]">
          <%= generate_user_status_opetions(@user.status) %>
        </select>
      </td>
    </tr>
    <tr class="form-field">
      <th scope="row" valign="top"><label for="user">Authorize:</label></th>
      <td>
        <%= display_user_roles(@user) %>
      </td>
    </tr>
    <tr class="form-field">
      <th scope="row" valign="top"><label for="user">Groups:</label></th>
      <td>
        <%= generate_groups_checkbox(@user) %>
      </td>
    </tr>
  </table>
  <p class="submit">
    <input type="submit" class="button" name="submit" value="Save" />
  </p>

  <div id="ajax-response"></div>

  <div class="tablenav">
    <br class="clear" />
  </div>

  <br class="clear" />
<% end %>
